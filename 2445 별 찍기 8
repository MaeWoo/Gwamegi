#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main() {
	int n;
	scanf("%d", &n);
	for (int i = 0; i < n - 1; i++) {
		for (int j = 0; j < i + 1; j++) {
			printf("*");
		}
		for (int j = 0; j < (n - i - 1) * 2; j++) {
			printf(" ");
		}
		for (int j = 0; j < i + 1; j++) {
			printf("*");
		}
		printf("\n");
	}
	for (int i = 0; i < 2 * n; i++) {
		printf("*");
	}
	printf("\n");
	for (int i = 0; i < n - 1; i++) {
		for (int j = (n - 1) - i; j > 0; j--) {
			printf("*");
		}
		for (int j = (i + 1) * 2; j > 0; j--) {
			printf(" ");
		}
		for (int j = (n - 1) - i; j > 0; j--) {
			printf("*");
		}
		printf("\n");
	}
}
