#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main(void) {
	int n;
	int value, top = 0;
	int stackIdx[500001], stackValue[500001];
	scanf("%d", &n);
	for (int i = 0; i < n; i++) {
		scanf("%d", &value);
		while (top > 0) {
			if (stackValue[top] > value) {
				printf("%d ", stackIdx[top]);
				break;
			}
			else {
				top--;
			}
		}

		if (top <= 0) {
			printf("0 ");
		}

		top++;
		stackIdx[top] = i + 1;
		stackValue[top] = value;
	}
}
